{
  "name": "Color Picker",
  "description": "A color picker extension",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "/image/picker_16.png",
    "32": "/image/picker_32.png",
    "48": "/image/picker_48.png"
  }
}
